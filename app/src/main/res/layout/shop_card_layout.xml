<?xml version="1.0" encoding="utf-8"?>
<!-- Root is now a vertical LinearLayout. clipToPadding and padding prevent shadow clipping. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginEnd="1dp"
    android:clipToPadding="false"
    android:padding="4dp">

    <!-- This FrameLayout contains only the parts that flip -->
    <FrameLayout
        android:id="@+id/flipper_container"
        android:layout_width="130dp"
        android:layout_height="130dp">

        <!-- Front of the Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_front"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="6dp"
            app:cardCornerRadius="26dp"
            app:cardElevation="5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- The ImageView now takes up the entire CardView -->
                <ImageView
                    android:id="@+id/shopImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder_image"/>

                <ImageButton
                    android:id="@+id/deleteShopButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/trash_icon"
                    android:visibility="gone" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Back of the Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_back"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:visibility="gone"
            app:cardBackgroundColor="#C8CFC4"
            android:layout_marginLeft="6dp"
            app:cardCornerRadius="26dp"
            app:cardElevation="5dp">

            <TextView
                android:id="@+id/shopLocationTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="8dp"
                android:text="Shop Location"
                android:textIsSelectable="true"
                android:textColor="#5F4646"
                android:fontFamily="@font/latoregular"
                android:textSize="11sp" />
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <!-- This LinearLayout holds the text and appears below the card -->
    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shopNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Shop Name"
            android:gravity="center"
            android:textColor="@color/GRAY"
            android:fontFamily="@font/latoregular"
            android:textSize="11sp"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/shopRatingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.5"
            android:textColor="#898989"
            android:fontFamily="@font/latoregular"
            android:textSize="11sp" />
    </LinearLayout>

</LinearLayout>